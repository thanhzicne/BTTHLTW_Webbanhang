@model BTTHLTW_Webbanhang.Models.Product
@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<div class="container mt-5">
    <div class="card border-danger shadow">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Xác nhận xóa sản phẩm</h4>
        </div>
        <div class="card-body">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="alert alert-warning" role="alert">
                    <strong>Bạn có chắc chắn muốn xóa sản phẩm sau không?</strong>
                </div>

                <div class="mb-3">
                    <h5 class="text-danger">@Model.Name</h5>
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail" style="max-width: 200px;" />
                    }
                    <p class="mt-2"><strong>Giá:</strong> @Model.Price</p>
                    <p><strong>Mô tả:</strong> @Model.Description</p>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash"></i> Xóa
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
