@model BTTHLTW_Webbanhang.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="row g-0">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="col-md-4 text-center p-4">
                    <img src="@Model.ImageUrl" alt="Ảnh sản phẩm" class="img-fluid rounded" style="max-height: 300px;" />
                </div>
            }
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title text-primary fw-bold">@Model.Name</h2>
                    <h4 class="text-danger mt-3">Giá: @Model.Price.ToString("N0") ₫</h4>
                    <hr />
                    <p class="card-text mt-3">Mô tả: @Model.Description</p>

                    <a asp-action="Index" class="btn btn-secondary mt-4">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
