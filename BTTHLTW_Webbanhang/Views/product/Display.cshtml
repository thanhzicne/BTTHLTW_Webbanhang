@model BTTHLTW_Webbanhang.Models.Product

@{
    ViewData["Title"] = "";
}

<h2>Display</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Name: @Model.Name</h4>
        <h4 class="card-title">Price: @Model.Price.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</h4>
        <h4 class="card-title">Description: @(string.IsNullOrEmpty(Model.Description) ? "N/A" : Model.Description)</h4>
    </div>
</div>
<h2>@Model.Name</h2>
<img src="@Model.ImageUrl" alt="Product Image" />
@foreach (var imageUrl in Model.ImageUrls)
{
    <img src="@imageUrl" alt="Product Image" />
}
<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to list</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}