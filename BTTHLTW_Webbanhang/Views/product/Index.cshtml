@model IEnumerable<BTTHLTW_Webbanhang.Models.Product>

@{
    ViewData["Title"] = "";
}

<h2>Products</h2>

<p>
    <a asp-action="Add" class="btn btn-primary">Thêm Sản Phẩm</a>
</p>

@if (Model == null || !Model.Any())
{
    <p>Không có sản phẩm nào.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Price</th>
                <th>DesDescription</th>
                <th>CtegoryId</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" alt="@product.Name" class="img-fluid" style="max-width: 100px; max-height: 100px; object-fit: cover;" />
                        }
                        else
                        {
                            <img src="https://picsum.photos/100/100" alt="No Image" class="img-fluid" style="max-width: 100px; max-height: 100px; object-fit: cover;" />
                        }
                    </td>
                   
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Description</td>
                    <td>@product.CategoryId</td>
                    <td>
                        <a asp-action="Display" asp-route-id="@product.Id" class="btn btn-sm btn-info">View</a>
                        <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
