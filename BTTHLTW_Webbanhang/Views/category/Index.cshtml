@model IEnumerable<BTTHLTW_Webbanhang.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>
<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Details" class="btn btn-success" asp-route-id="@category.Id">Chi Tiết</a> |
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@category.Id">Sửa</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@category.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>